              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             
            android:name="com.teachtown.activity.MainMenuActivity"
            android:label="@string/app_name" >
        </activity>
     	 <activity
     	      android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
     	     
            android:name="com.teachtown.activity.ExerciseActivity"
