        <activity
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name="com.teachtown.activity.TrialReceptiveLabeActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:name="com.teachtown.activity.TrialJointAttentionActivity"
            android:label="@string/app_name" >
