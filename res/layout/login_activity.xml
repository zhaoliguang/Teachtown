<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scene_01_4"
    > 
    <ImageView
        android:id="@+id/login_main"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_main" />
     <TextView 
         android:id="@+id/user_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="665dp"
        android:layout_marginTop="78dp"
        android:text="用户登录"
        android:textSize="30sp"
        android:textColor="#FFFFFF" 
         />
     <TextView 
         android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="535dp"
        android:layout_marginTop="135dp"
        android:text="用户名"
        android:textColor="#000000" 
        android:textSize="26sp"
         />
     <TextView 
         android:id="@+id/user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="735dp"
        android:layout_marginTop="135dp"
        android:text="密码"
        android:textColor="#000000" 
        android:textSize="26sp"
         />
    <EditText
        android:id="@+id/app_login_name"
        android:layout_width="185dp"
   		android:layout_height="47dp"
   		android:singleLine="true"
   		android:layout_marginLeft="532dp"
        android:layout_marginTop="175dp"
        />
    
    <EditText
        android:id="@+id/app_login_edit_pass"
        android:layout_width="185dp"
   		android:layout_height="47dp"
   		android:singleLine="true"
   		android:layout_marginLeft="733dp"
        android:layout_marginTop="175dp"
        android:inputType="textPassword"
        />
    <ImageView
        android:id="@+id/app_login_btn_submit"
        android:layout_width="180dp"
   		android:layout_height="80dp"
   		android:layout_marginLeft="535dp"
        android:layout_marginTop="210dp"
   		android:src="@drawable/login_button"
   		
        />
     <ImageView
        android:id="@+id/app_register"
        android:layout_width="180dp"
   		android:layout_height="80dp"
   		android:layout_marginLeft="740dp"
        android:layout_marginTop="210dp"
   		android:src="@drawable/register_button"
        />

      <CheckBox 
         android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="270dp"
        android:textSize="20sp"
        android:text="记住密码"
        android:textColor="#4876FF" 
         />
</RelativeLayout>
