<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" 
	android:background="@drawable/main_scene_bg"
	>
	<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"       				 
 		android:layout_marginTop="20dip"
		android:layout_marginLeft="250dip"
		android:gravity="center"
		android:text="@string/main_title"
		android:textColor="#00FF00"
		android:textSize="15pt" />

	<GridLayout
	    android:id="@+id/im_small_icon"
	    android:layout_width="597dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginTop="5dp"
	    android:horizontalSpacing="20dp"
	    android:numColumns="4"
	    android:verticalSpacing="20dp" >

	    <LinearLayout
	        android:layout_width="140dp"
	        android:layout_height="140dp"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/home_iv"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="3dp"
	            android:layout_marginTop="5dp"
	            android:src="@drawable/home" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="10dip"
	            android:text="Home"
	            android:textColor="#FFFFFF"
	            android:textSize="6pt" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="140dp"
	        android:layout_height="140dp"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/curriculum_iv"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="3dp"
	            android:layout_marginTop="5dp"
	            android:src="@drawable/curriculum" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="10dip"
	            android:text="课程"
	            android:textColor="#FFFFFF"
	            android:textSize="6pt" />
	    </LinearLayout>

	    <LinearLayout
	        android:layout_width="140dp"
	        android:layout_height="140dp"
	        android:layout_column="2"
	        android:layout_gravity="left|top"
	        android:layout_row="0"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/result_iv"
	            android:layout_width="70dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="3dp"
	            android:layout_marginTop="5dp"
	            android:src="@drawable/result" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_margin="10dip"
	            android:text="成绩"
	            android:textColor="#FFFFFF"
	            android:textSize="6pt" />
	    </LinearLayout>
	 

	</GridLayout>
				               			                
</LinearLayout>