<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/social_emotional_background"
    
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rrla1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:focusable="true" 
		android:focusableInTouchMode="true" 
        android:layout_marginTop="10dp"       
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
            android:src="@drawable/return_button" />

        <ImageView
            android:id="@+id/im_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="620dp"
            android:src="@drawable/search_" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:singleLine="true"
            android:layout_marginLeft="680dp"
            android:layout_marginTop="24dp"
            android:ems="10">
        </EditText>

        <ImageView
            android:id="@+id/im_search_search_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="900dp"
            android:src="@drawable/search_box" />

        </RelativeLayout>
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/rrla1"
           
            android:background="@drawable/lesson_listview_background"
            android:orientation="vertical"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="20dp" >

            <GridView
                android:id="@+id/gv_lesson"
                 android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:numColumns="1" >
            </GridView>

        </RelativeLayout>
</RelativeLayout>